<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mycompany.washlify.SelectItemsActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
	        android:id="@+id/activity_selectitems_top_bar"
	        android:layout_width="match_parent"
	        android:layout_height="45dp"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true" 
	        android:background="@drawable/top_bar_bg">
	
	        <Button
	            android:id="@+id/activity_selectitems_btn_back"
	            style="?android:attr/buttonStyleSmall"
	            android:layout_width="30dp"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:layout_margin="7dp"
	            android:background="@drawable/arrow_back" />
	
	        <TextView
		        android:id="@+id/activity_selectitems_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true"
		        android:text="@string/selectitems_activity_title"
		        android:textAlignment="center"
		        android:textColor="#ffffff"
		        android:textSize="22dp"/>
	        	        
	</RelativeLayout>
	
    <ScrollView
        android:id="@+id/activity_selectitems_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_selectitems_top_bar"
        android:layout_above="@+id/activity_selectitems_bottom"
        >

        <LinearLayout
            android:id="@+id/activity_selectitems_linearview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                    android:id="@+id/activity_selectitems_stmt_laundry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#cfcfcf"
                    android:text="LAUNDRY"
                    android:paddingLeft="10dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="6dp"
                    android:textSize="20sp" />
            
            
            <RelativeLayout
                android:id="@+id/activity_selectItems_row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/activity_selectitems_stmt_washnfold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center_vertical"
                    
                    android:text="Wash n Fold (Per Pound)"
                    android:textSize="20sp" />

                
                <TextView
                    android:id="@+id/activity_selectitems_stmt_washnfold_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#256793"
                    android:text="$ 1.25" />
                
            </RelativeLayout>
            
            <TextView
                    android:id="@+id/activity_selectitems_stmt_popularitems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#cfcfcf"
                    android:text="POPULAR ITEMS"
                    android:paddingLeft="10dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="6dp"
                    android:textSize="20sp" />
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/activity_selectitems_stmt_shirt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center_vertical"
                    
                    android:text="Shirt"
                    android:textSize="20sp" />

                
                <TextView
                    android:id="@+id/activity_selectitems_stmt_shirt_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#256793"
                    android:text="$ 3.25" />
                
            </RelativeLayout>
            
            
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/filter_bg_separate_line"
                android:layout_marginLeft="10sp" />
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/activity_selectitems_stmt_blouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:gravity="center_vertical"
                    
                    android:text="Blouse"
                    android:textSize="20sp" />

                
                <TextView
                    android:id="@+id/activity_selectitems_stmt_blouse_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#256793"
                    android:text="$ 1.50" />
                
            </RelativeLayout>

            
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/filter_bg_separate_line" 
                android:layout_marginLeft="10sp"/>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/activity_selectitems_stmt_pants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:gravity="center_vertical"
                    
                    android:text="Pants"
                    android:textSize="20sp" />

                
                <TextView
                    android:id="@+id/activity_selectitems_stmt_pants_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#256793"
                    android:text="$ 6.75" />
                
            </RelativeLayout>
            
            <TextView
                    android:id="@+id/activity_selectitems_stmt_otheritems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#cfcfcf"
                    android:text="OTHER ITEMS"
                    android:paddingLeft="10dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="6dp"
                    android:textSize="20sp" />
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/activity_selectitems_stmt_scarf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center_vertical"
                    
                    android:text="Scarf"
                    android:textSize="20sp" />

                
                <TextView
                    android:id="@+id/activity_selectitems_stmt_scarf_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#256793"
                    android:text="$ 4.75" />
                
            </RelativeLayout>
            
            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/filter_bg_separate_line" 
                android:layout_marginLeft="10sp"/>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/activity_selectitems_stmt_bra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:gravity="center_vertical"
                    
                    android:text="Bra"
                    android:textSize="20sp" />

                
                <TextView
                    android:id="@+id/activity_selectitems_stmt_bra_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#256793"
                    android:text="$ 5.00" />
                
            </RelativeLayout>
            
            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/filter_bg_separate_line" 
                android:layout_marginLeft="10sp"/>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/activity_selectitems_stmt_tie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:gravity="center_vertical"
                    
                    android:text="Tie"
                    android:textSize="20sp" />

                
                <TextView
                    android:id="@+id/activity_selectitems_stmt_tie_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#256793"
                    android:text="$ 10.50" />
                
            </RelativeLayout>
            
            <ImageView
	            android:id="@+id/imageView4"
	            android:layout_width="match_parent"
	            android:layout_height="40dp"
	            android:src="@drawable/custom_grey_bg" />
    
        </LinearLayout>
        
    </ScrollView>

    <!--  -->


    <RelativeLayout
        android:id="@+id/activity_selectitems_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/activity_selectitems_btn_gotoCart"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/btn_gotocart" />

        <TextView
            android:id="@+id/activity_selectitems_stmt_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10sp"
            android:text="Total: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/activity_selectitems_amount_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/activity_selectitems_stmt_total"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:text="$ 20.00"
            android:textSize="20sp"
            android:textStyle="bold" />
        
    </RelativeLayout>
    
    

</RelativeLayout>




