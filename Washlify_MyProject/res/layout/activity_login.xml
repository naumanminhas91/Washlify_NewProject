<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity" >

    <RelativeLayout
        android:id="@+id/activity_login_top_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" 
        android:background="@drawable/login_top_bar_bg">

        <Button
            android:id="@+id/activity_login_btn_close"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="7dp"
            android:background="@drawable/login_close_ico" />
        
        <TextView
        android:id="@+id/activity_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/login_activity_title"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="22dp"/>
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_login_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/activity_login_top_bar" >
        
        
        <EditText
	        android:id="@+id/activity_login_field_username"
	        android:layout_height="40sp"
	        android:layout_width="match_parent"        
	        android:background="@drawable/login_textfield"
	        android:drawableLeft="@drawable/login_mail_ico"
	        android:ems="10"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="10dp"
	        android:hint=" Email"
	        android:textSize="16sp"
	        android:textColor="#000000" >

        	<requestFocus />
	    </EditText>
	    
	    <EditText
	        android:id="@+id/activity_login_field_password"
	        android:layout_width="match_parent"
	        android:layout_height="40sp"
	        android:layout_below="@id/activity_login_field_username"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="10dp"
	        android:background="@drawable/login_textfield"
	        android:drawableLeft="@drawable/login_password_ico"
	        android:drawablePadding="4dp"
	        android:ems="10"
	        android:hint="Password"
	        android:inputType="textPassword"
	        android:textColor="#000000"
	        android:textSize="16sp" >
	
	        <requestFocus />
	    </EditText>
    
		<Button
	        android:id="@+id/activity_login_btn_login"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_height="40sp"
	        android:layout_width="match_parent"
	        android:layout_below="@id/activity_login_field_password"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="10dp"
	        android:background="@drawable/login_btn_login"/>

		<ImageView
		    android:id="@+id/activity_login_dont_have_an_account"
		    android:layout_width="fill_parent"
		    android:layout_height="30sp"
		    android:layout_below="@+id/activity_login_btn_login"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="10dp"
		    android:src="@drawable/login_dont_have_account" />
		
		<Button
	        android:id="@+id/activity_login_btn_signup"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_height="40sp"
	        android:layout_width="match_parent"
	        android:layout_below="@id/activity_login_dont_have_an_account"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="10dp"
	        android:background="@drawable/login_btn_signup"/>
        
    </RelativeLayout>

</RelativeLayout>






