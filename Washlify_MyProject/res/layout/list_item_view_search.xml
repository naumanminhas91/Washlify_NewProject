<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:layout_gravity="top"
    android:background="@drawable/search_result_item"
    android:paddingTop="0dip" >

    <ImageView
        android:id="@+id/search_result_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal"
        android:padding="3dp"
        android:src="@drawable/search_result_default_image" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/search_result_logo"
        android:layout_marginTop="5dp">
    
	    <TextView
	        android:id="@+id/search_result_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:text="Text View Title"
	        android:textSize="18sp" />
	
	    <ImageView
	        android:id="@+id/search_result_address_logo"
	        android:layout_width="15dp"
	        android:layout_height="19dp"
	        android:layout_alignTop="@+id/search_result_address"
	        android:layout_alignBottom="@+id/search_result_address"
	        android:layout_alignParentLeft="true"
	        android:scaleType="fitStart"
	        android:src="@drawable/start_map_logo" />
	
	    <TextView
	        android:id="@+id/search_result_address"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/search_result_title"
	        android:layout_toRightOf="@+id/search_result_address_logo"
	        android:gravity="center_vertical"
	        android:text="Text View address"
	        android:textSize="12sp"
	        android:textColor="@android:color/darker_gray" />
	
	    <RatingBar
	        android:id="@+id/search_result_rating_bar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/search_result_address_logo"
	        android:layout_marginLeft="-62dp"
	        android:layout_marginTop="-16dp"
	        android:layout_marginBottom="-15dp"
	        android:numStars="5"
	        android:rating="3"
	        android:scaleX="0.5"
	        android:scaleY="0.5" />
    
    </RelativeLayout>
    
    <TextView
        android:id="@+id/search_result_discount_bg"
        android:layout_width="40sp"
        android:layout_height="20sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="-20%"
        android:textSize="14sp"
        android:background="@drawable/green_bg" />
    
    <TextView
        android:id="@+id/search_result_statement_minorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="-2dp"
        android:layout_above="@+id/search_result_min_order"
        android:gravity="center"
        android:text="Min Order"
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray" />
    
    <TextView
        android:id="@+id/search_result_min_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="$ 20.00"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"/>
    
    
</RelativeLayout>